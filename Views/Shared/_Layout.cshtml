<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeliveryApp</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="main-header col-auto d-flex align-items-center justify-content-between">
        <img width="200" src="~/logo.png" />
        <partial name="_MainNav" model='@ViewData["PageName"]' />
    </header>
    <main role="main" class="col row align-items-stretch p-2">
        @RenderBody()
    </main>
    <script src="~/js/site.js"></script>
</body>
</html>
